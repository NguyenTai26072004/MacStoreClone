<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce_WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce_WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout_customer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<body>
    <!-- ===== HEADER ===== -->
    <header class="bg-black text-white px-3 py-2 position-relative" id="mainHeader">
        <div class="container-fluid">
            <!-- MOBILE HEADER -->
            <div class="d-flex d-lg-none justify-content-between align-items-center">
                <!-- Toggle Button -->
                <button class="btn text-white p-0" onclick="toggleMenu()">
                    <i class="fa-solid fa-bars fs-4"></i>
                </button>

                <!-- Logo giữa -->
                <a href="/" class="mx-auto">
                    <img src="~/img/logo.png" alt="Logo" height="26" />
                </a>

                <!-- Icon phải -->
                <div class="d-flex align-items-center gap-3">
                    <!-- Mobile search icon -->
                    <i class="fa-solid fa-magnifying-glass text-white fs-5 cursor-pointer" onclick="toggleSearchOverlay()"></i>
                    <a href="#"><i class="fa-regular fa-user fs-5 text-white"></i></a>
                    <a href="#" class="position-relative">
                        <i class="fa-solid fa-cart-shopping fs-5 text-white"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">2</span>
                    </a>
                </div>
            </div>

            <!-- DESKTOP HEADER -->
            <div class="d-none d-lg-flex justify-content-between align-items-center">
                <!-- Logo -->
                <a href="/">
                    <img src="~/img/logo.png" alt="Logo" height="30" class="ps-5" />
                </a>

                <!-- Menu full width -->
                <ul class="d-flex flex-grow-1 list-unstyled mb-0 justify-content-center gap-5 align-items-center ms-5 me-5">
                    <!--Mac book -->
                    <li class="nav-item position-relative dropdown-hover">
                        <a href="#" class="text-white text-decoration-none">
                            MacBook <i class="fa-solid fa-caret-down ms-1"></i>
                        </a>
                        <ul class="dropdown-menu-custom">
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook M1</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook M2</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook M3</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook M4</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook Air</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">MacBook Pro</a></li>
                        </ul>
                    </li>

                    <!--iMac -->
                    <li class="nav-item position-relative dropdown-hover">
                        <a href="#" class="text-white text-decoration-none">
                            iMac <i class="fa-solid fa-caret-down ms-1"></i>
                        </a>
                        <ul class="dropdown-menu-custom">
                            <li><a href="#" class="dropdown-item-custom text-white">iMac M1</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac M3</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac M4</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac 2024</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac 2023</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac 2021</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">iMac 2020</a></li>

                        </ul>
                    </li>

                    <!--Mac Studio -->
                    <li class="nav-item position-relative dropdown-hover">
                        <a href="#" class="text-white text-decoration-none">
                            Mac Studio <i class="fa-solid fa-caret-down ms-1"></i>
                        </a>
                        <ul class="dropdown-menu-custom">
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio M1</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio M2</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio M3</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio M4</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio 2025</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio 2023</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Studio 2022</a></li>
                        </ul>
                    </li>

                    <!--Mac Mini -->
                    <li class="nav-item position-relative dropdown-hover">
                        <a href="#" class="text-white text-decoration-none">
                            Mac Mini <i class="fa-solid fa-caret-down ms-1"></i>
                        </a>
                        <ul class="dropdown-menu-custom">
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini M4</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini M2</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini M1</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini 2024</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini 2023</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Mac Mini 2020</a></li>
                        </ul>
                    </li>

                    <!--Phụ kiện -->
                    <li class="nav-item position-relative dropdown-hover">
                        <a href="#" class="text-white text-decoration-none">
                            Phụ kiện <i class="fa-solid fa-caret-down ms-1"></i>
                        </a>
                        <ul class="dropdown-menu-custom">
                            <li><a href="#" class="dropdown-item-custom text-white">Phụ kiện Apple</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Phụ kiện Window</a></li>
                            <li><a href="#" class="dropdown-item-custom text-white">Phụ kiện Surface</a></li>
                        </ul>
                    </li>

                    <!--Tin tức -->
                    <li><a href="#" class="text-white text-decoration-none">Tin tức</a></li>
                </ul>

                <!-- Icon -->
                <div class="d-flex align-items-center gap-4 pe-5">
                    <i class="fa-solid fa-magnifying-glass text-white fs-5 cursor-pointer" onclick="toggleSearchOverlay()"></i>
                    <!-- User icon with dropdown -->
                    <div class="position-relative user-dropdown">
                        <div class="user-icon cursor-pointer">
                            <i class="fa-regular fa-user fs-5 text-white"></i>
                        </div>

                        <!-- Dropdown content -->
                        <div class="user-dropdown-menu bg-white text-dark rounded shadow p-3 position-absolute end-0 mt-2" style="display: none; z-index: 1050;">
                            <a href="#" class="d-block mb-2 text-decoration-none text-dark">Đăng nhập</a>
                            <a href="#" class="d-block text-decoration-none text-dark">Đăng ký</a>
                        </div>
                    </div>


                    <a href="#" class="position-relative">
                        <i class="fa-solid fa-cart-shopping fs-5 text-white"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">2</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- MOBILE MENU -->
        <div id="mobileMenu" class="d-lg-none d-none mt-2 px-3">
            <ul class="list-unstyled">
                <li class="py-2"><a href="#" class="text-white text-decoration-none">MacBook</a></li>
                <li class="py-2"><a href="#" class="text-white text-decoration-none">iMac</a></li>
                <li class="py-2"><a href="#" class="text-white text-decoration-none">Mac Mini</a></li>
                <li class="py-2"><a href="#" class="text-white text-decoration-none">Mac Studio</a></li>
                <li class="py-2"><a href="#" class="text-white text-decoration-none">Phụ kiện</a></li>
                <li class="py-2"><a href="#" class="text-white text-decoration-none">Tin tức</a></li>
            </ul>
        </div>
    </header>

    <!-- ===== SEARCH OVERLAY ===== -->
    <div id="searchOverlay"
         class="position-absolute top-0 start-0 w-100 bg-black d-none px-3"
         style="z-index: 1050; height: 46px;">
        <div class="container-fluid h-100 d-flex justify-content-center align-items-center">
            <input type="text"
                   class="form-control form-control-sm w-50 border-0"
                   style="border-radius: 0; height: 32px;"
                   placeholder="Tìm kiếm..." />
        </div>
    </div>


    <!-- ===== BODY ===== -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="border-top footer text-muted">
    </footer>

    <!-- ===== SCRIPT ===== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/layout_user.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
