@using Ecommerce_WebApp.Utility
@model IEnumerable<OrderHeader>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    var currentStatus = Context.Request.Query["status"];
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <!-- BỘ LỌC THEO TRẠNG THÁI -->
        <ul class="nav nav-pills nav-fill bg-light p-2 rounded mb-4">
            <li class="nav-item">
                <a class="nav-link @(string.IsNullOrEmpty(currentStatus) ? "active" : "")" asp-action="Index" asp-all-route-data="null" asp-route-status="">Tất cả</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentStatus == SD.OrderStatusPending ? "active" : "")" asp-action="Index" asp-route-status="@SD.OrderStatusPending">Chờ xử lý</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentStatus == SD.OrderStatusProcessing ? "active" : "")" asp-action="Index" asp-route-status="@SD.OrderStatusProcessing">Đang xử lý</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentStatus == SD.OrderStatusShipped ? "active" : "")" asp-action="Index" asp-route-status="@SD.OrderStatusShipped">Đang giao</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentStatus == SD.OrderStatusCompleted ? "active" : "")" asp-action="Index" asp-route-status="@SD.OrderStatusCompleted">Hoàn thành</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(currentStatus == SD.OrderStatusCancelled ? "active" : "")" asp-action="Index" asp-route-status="@SD.OrderStatusCancelled">Đã hủy</a>
            </li>
        </ul>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Tên Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.FullName</td>
                            <td>@order.OrderDate.ToString("g")</td>
                            <td>@order.OrderTotal.ToString("N0")₫</td>
                            <td>@order.OrderStatus</td>
                            <td>
                                <a asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-search"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
             $('#dataTable').DataTable({
                 // Thêm tùy chọn "language" để Việt hóa
                 "language": {
                     "lengthMenu": "Hiển thị _MENU_ mục",
                     "zeroRecords": "Không tìm thấy dữ liệu",
                     "info": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ mục",
                     "infoEmpty": "Không có mục nào để hiển thị",
                     "infoFiltered": "(được lọc từ _MAX_ mục)",
                     "search": "Tìm kiếm:",
                     "paginate": {
                         "first": "Đầu",
                         "last": "Cuối",
                         "next": "Tiếp",
                         "previous": "Trước"
                     }
                 }
             });
         });
    </script>
}