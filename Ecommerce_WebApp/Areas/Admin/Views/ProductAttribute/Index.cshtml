@using Ecommerce_WebApp.Models;
@model IEnumerable<ProductAttribute>
@{
    ViewData["Title"] = "Danh sách Thuộc tính";
}

@* Thêm CSS của DataTables cho trang này *@
@section Styles {
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-6">
                <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
            </div>
            <div class="col-6 text-right">
                @* Sửa asp-controller thành "Attribute" *@
                <a asp-controller="ProductAttribute" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Tạo mới Thuộc tính
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Thuộc tính</th>
                        <th style="width: 150px;">Hành động</th> @* Đặt chiều rộng cố định cho cột hành động *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="ProductAttribute" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-controller="ProductAttribute" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="fas fa-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Tải các plugin của DataTables -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Kích hoạt DataTables và Việt hóa -->
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ mục",
                    "infoEmpty": "Không có mục nào để hiển thị",
                    "infoFiltered": "(được lọc từ _MAX_ mục)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu", "last": "Cuối", "next": "Tiếp", "previous": "Trước"
                    }
                }
            });
        });
    </script>
}