@model AttributeValue
@{
    ViewData["Title"] = "Xóa Giá trị Thuộc tính";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">@ViewData["Title"]</h2>
            <hr />
            <h4 class="text-warning mt-2">Bạn có chắc chắn muốn xóa giá trị "@Model.Value" của thuộc tính "@Model.Attribute.Name"?</h4>
        </div>

        <div class="mb-3">
            <label asp-for="Attribute.Name"></label>
            <input asp-for="Attribute.Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Value"></label>
            <input asp-for="Value" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Xác nhận Xóa</button>
        <a asp-controller="AttributeValue" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Quay lại
        </a>
    </div>
</form>