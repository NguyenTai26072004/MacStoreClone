@using Ecommerce_WebApp.ViewModels
@model CategoryFormVM
@{
    ViewData["Title"] = "Tạo mới Danh mục";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@ViewData["Title"]</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.ParentId"></label>
            <select id="ParentCategoryDropdown" asp-for="Category.ParentId" asp-items="@Model.ParentCategoryList" class="form-control">
                <option value="">-- Đây là danh mục gốc --</option>
            </select>
            <span asp-validation-for="Category.ParentId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IconImage"></label>
            <input asp-for="IconImage" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Tạo</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function() {
            $('#ParentCategoryDropdown').select2({
                placeholder: "-- Chọn danh mục cha --",
                allowClear: true
            });
        });
    </script>
}