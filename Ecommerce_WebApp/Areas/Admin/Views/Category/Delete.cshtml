@model Category
@{
   
}


<form method="post" asp-action="DeletePOST">

    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Xóa Danh mục</h2>
            <hr />
            <h4 class="text-warning mt-2">Bạn có chắc chắn muốn xóa danh mục này?</h4>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            @* Thêm thuộc tính "disabled" để biến ô input thành dạng chỉ đọc. *@
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Xóa</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Quay lại
        </a>
    </div>
</form>