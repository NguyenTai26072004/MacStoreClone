@using Ecommerce_WebApp.ViewModels
@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th>Họ và Tên</th>
                        <th>Email</th>
                        <th>Vai trò (Roles)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Roles</td>
                            <td>
                                <a asp-action="RoleManagement" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-user-edit"></i> 
                                </a>
                                <a asp-area="Admin" asp-controller="User" asp-action="UserOrders" asp-route-userId="@user.Id"
                                   class="btn btn-info btn-sm" title="Xem Lịch sử Đơn hàng">
                                    <i class="fas fa-list-ul"></i>
                                </a>
                                <form asp-action="ToggleLockout" asp-route-id="@user.Id" method="post" class="d-inline-block">
                                    @if (user.IsLocked)
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Mở khóa tài khoản này"
                                                onclick="return confirm('Bạn có chắc chắn muốn MỞ KHÓA tài khoản @user.Email không?')">
                                            <i class="fas fa-lock-open"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-danger btn-sm" title="Khóa tài khoản này"
                                                onclick="return confirm('Bạn có chắc chắn muốn KHÓA tài khoản @user.Email không?')">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({             
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ mục",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị từ _START_ đến _END_ trên tổng số _TOTAL_ mục",
                    "infoEmpty": "Không có mục nào để hiển thị",
                    "infoFiltered": "(được lọc từ _MAX_ mục)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });
        });
    </script>
}