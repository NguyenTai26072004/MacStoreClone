@using Ecommerce_WebApp.ViewModels
@model RoleManagementVM
@{
    ViewData["Title"] = "Quản lý Vai trò";
}

<div class="card shadow mb-4">
    <div class="card-header">
        <h4 class="mb-0">Quản lý Vai trò cho Người dùng</h4>
    </div>
    <div class="card-body">
        <form method="post">
            @* Gửi lại ID của người dùng *@
            <input asp-for="User.Id" hidden />

            <div class="mb-4">
                <p><strong>Người dùng:</strong> @Model.User.FullName</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
            </div>

            <h5>Chọn các vai trò:</h5>

            @* Dùng vòng lặp để hiển thị các checkbox *@
            @foreach (var role in Model.RoleList)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           name="selectedRoles"
                           value="@role.Value"
                           id="role_@role.Value"
                    @(role.Selected ? "checked" : "")>
                    <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                </div>
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Cập nhật Vai trò</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>