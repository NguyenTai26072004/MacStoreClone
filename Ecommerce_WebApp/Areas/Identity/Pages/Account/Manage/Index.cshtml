@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-id-card me-2"></i>@ViewData["Title"]
        </h4>
    </div>
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            @* --- Phần 1: Thông tin tài khoản --- *@
            <h5 class="fw-bold">Thông tin tài khoản</h5>
            <p class="text-muted small">Đây là thông tin dùng để đăng nhập và định danh bạn trên hệ thống.</p>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" disabled />
                <label asp-for="Username" class="form-label"></label>
                <div class="form-text">Tên đăng nhập không thể thay đổi.</div>
            </div>

            <hr class="my-4">

            @* --- Phần 2: Thông tin liên hệ --- *@
            <h5 class="fw-bold">Thông tin liên hệ</h5>
            <p class="text-muted small">Thông tin này sẽ được sử dụng cho việc giao hàng và liên lạc khi cần thiết.</p>
            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Lưu thông tin</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}