@page
@model EmailModel
@{
    ViewData["Title"] = "Quản lý Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-envelope me-2"></i>@ViewData["Title"]
        </h4>
    </div>
    <div class="card-body p-4">
        <partial name="_StatusMessage" for="StatusMessage" />
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled placeholder="Địa chỉ email hiện tại" />
                        <span class="input-group-text bg-success text-white" title="Email đã được xác thực">
                            <i class="fas fa-check-circle"></i>
                        </span>
                    </div>
                }
                else
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled placeholder="Địa chỉ email hiện tại" />
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-secondary">Gửi lại email xác thực</button>
                    </div>
                    <div class="form-text">Email của bạn chưa được xác thực.</div>
                }
            </div>

            <hr class="my-4">

            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Nhập email mới của bạn" />
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Đổi Email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}