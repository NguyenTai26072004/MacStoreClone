@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <div class="card shadow-lg" style="border-radius: 1rem;">
                <div class="card-body p-4 p-sm-5 text-center">

                    <div class="mb-4">
                        <img src="~/img/logo.png" alt="Logo" height="40" />
                    </div>

                    <h3 class="fw-bold mb-4">Đăng nhập tài khoản</h3>

                    <!-- ===== FORM ĐĂNG NHẬP BẰNG EMAIL/MẬT KHẨU ===== -->
                    <form id="account" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger text-start mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Địa chỉ Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger d-block text-start"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger d-block text-start"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-label">
                                    Ghi nhớ tôi?
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg fw-bold">Đăng nhập</button>
                        </div>

                    </form>
                    <div class="d-flex justify-content-center my-2">
                        <span class="me-2">Bạn chưa có tài khoản?</span>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Đăng ký
                        </a>
                    </div>
                    <hr class="my-4">

                   

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) != 0)
                        {
                            <p class="text-muted mt-4">Hoặc đăng nhập với</p>

                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Đăng nhập bằng tài khoản @provider.DisplayName của bạn">
                                        @if (provider.Name.ToLower() == "google")
                                        {
                                            <i class="fa-brands fa-google me-2"></i>
                                            <span>Đăng nhập bằng</span>
                                        }
                                        else if (provider.Name.ToLower() == "facebook")
                                        {
                                            <i class="fa-brands fa-facebook me-2"></i>
                                        }
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}