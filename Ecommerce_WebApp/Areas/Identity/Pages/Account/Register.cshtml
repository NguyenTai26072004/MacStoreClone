@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <div class="card shadow-lg" style="border-radius: 1rem;">
                <div class="card-body p-4 p-sm-5">

                    <div class="text-center mb-4">
                        <img src="~/img/logo.png" alt="Logo" height="40" />
                    </div>

                    <h3 class="fw-bold mb-4 text-center">@ViewData["Title"]</h3>

                    <!-- FORM ĐĂNG KÝ BẰNG EMAIL -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger text-start mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Địa chỉ Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger d-block text-start"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger d-block text-start"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Xác nhận Mật khẩu</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger d-block text-start"></span>
                        </div>
                        <div class="d-grid mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg fw-bold">Đăng ký</button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p>
                            Đã có tài khoản?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">Đăng nhập</a>
                        </p>
                    </div>


                    <div class="d-flex align-items-center my-4">
                        <hr class="flex-grow-1">
                        <span class="px-3 text-muted small">hoặc</span>
                        <hr class="flex-grow-1">
                    </div>

                    <!-- CÁC LỰA CHỌN ĐĂNG KÝ BÊN NGOÀI -->
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) != 0)
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-dark" name="provider" value="@provider.Name" title="Đăng ký bằng tài khoản @provider.DisplayName của bạn">
                                        @if (provider.Name.ToLower().Contains("google"))
                                        {
                                            <i class="fa-brands fa-google me-2"></i>
                                        }
                                        else if (provider.Name.ToLower().Contains("facebook"))
                                        {
                                            <i class="fa-brands fa-facebook me-2"></i>
                                        }
                                        Đăng ký với @provider.DisplayName
                                    </button>
                                }
                            </form>
                        }
                    }

                </div>
            </div>

            

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}