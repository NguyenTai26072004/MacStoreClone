@model ShoppingCart

@{
    ViewData["Title"] = "Giỏ Hàng";
    var cart = Model; 
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Giỏ hàng của bạn</h1>
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
            <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
        </a>
    </div>

    @if (cart.Items.Any())
    {
        <div class="row g-4">
            <!-- DANH SÁCH SẢN PHẨM -->
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Bạn đang có <span id="item-count-text">@cart.Items.Count</span> sản phẩm trong giỏ hàng</span>
                </div>

                @foreach(var item in cart.Items)
                {
                    <!-- Bắt đầu Card sản phẩm-->
                    <div class="card shadow-sm mb-3 cart-item-row" id="cart-item-@item.VariantId">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-2 mb-3 mb-md-0">
                                    <img src="@(item.ImageUrl ?? "/images/placeholder.png")" class="img-fluid rounded" alt="@item.ProductName">
                                </div>
                                <div class="col-12 col-md-4 mb-3 mb-md-0">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <small class="text-muted">@item.VariantDescription</small>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="input-group input-group-sm" style="width: 120px;">
                                        <button class="btn btn-outline-secondary btn-decrease-qty" type="button" data-id="@item.VariantId">-</button>
                                        <input type="number" class="form-control text-center update-cart-qty-page" value="@item.Quantity" min="1" data-id="@item.VariantId" readonly>
                                        <button class="btn btn-outline-secondary btn-increase-qty" type="button" data-id="@item.VariantId">+</button>
                                    </div>
                                </div>
                                <div class="col-4 col-md-2 text-md-end">
                                    <span class="fw-bold item-subtotal" id="subtotal-page-@item.VariantId">@item.SubTotal.ToString("N0")₫</span>
                                </div>
                                <div class="col-2 col-md-1 text-end">
                                    <button class="btn btn-link text-danger p-0 remove-from-cart-page" data-id="@item.VariantId">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <!-- Kết thúc Card sản phẩm -->
            </div>

            <!-- TÓM TẮT ĐƠN HÀNG -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Tóm tắt đơn hàng</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-2">
                                <span>Tạm tính</span>
                                <span id="cart-subtotal-text">@cart.Items.Sum(i => i.SubTotal).ToString("N0")₫</span>
                            </li>
                            <!-- ... phí giao hàng, mã giảm giá ... -->
                            <li class="list-group-item d-flex justify-content-between align-items-center border-top pt-3 px-0">
                                <strong class="h5">Tổng cộng</strong>
                                <strong class="h5" id="cart-total-text">@cart.Items.Sum(i => i.SubTotal).ToString("N0")₫</strong>
                            </li>
                        </ul>
                        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success w-100 mt-4 py-2 fw-bold text-white">TIẾN HÀNH THANH TOÁN</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- GIAO DIỆN KHI GIỎ HÀNG RỖNG - PHIÊN BẢN NÂNG CẤP -->
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 text-center p-4 p-md-5">
                    <div class="card-body">

                        <img src="~/img/empty-cart.svg" alt="Giỏ hàng trống" class="img-fluid mb-4" style="max-height: 200px;">

                        <h2 class="h4 fw-bold mb-3">Giỏ hàng của bạn đang trống</h2>
                        <p class="text-muted mb-4">
                            Trông có vẻ như bạn chưa thêm sản phẩm nào.
                            Hãy khám phá các sản phẩm tuyệt vời của chúng tôi!
                        </p>

                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3 text-white">
                                <i class="fas fa-home me-2"></i>Về Trang chủ
                            </a>
                            @* Bạn có thể thay đổi link này đến trang sản phẩm bán chạy nhất *@
                            <a asp-controller="Category" asp-action="Index" asp-route-id="1" class="btn btn-outline-secondary btn-lg px-4">
                                Xem MacBook
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
}

