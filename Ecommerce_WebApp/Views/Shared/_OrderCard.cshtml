@using Ecommerce_WebApp.Utility
@model OrderHeader

@{
    var statusConfig = Model.OrderStatus switch
    {
        SD.OrderStatusPending => ("secondary", "fa-hourglass-start", "Chờ xử lý"),
        SD.OrderStatusProcessing => ("primary", "fa-person-digging", "Đang xử lý"),
        SD.OrderStatusShipped => ("info", "fa-truck-fast", "Đang giao"),
        SD.OrderStatusCompleted => ("success", "fa-circle-check", "Hoàn thành"),
        SD.OrderStatusCancelled => ("danger", "fa-circle-xmark", "Đã hủy"),
        _ => ("dark", "fa-question-circle", "Không rõ")
    };
}

<div class="card card-order shadow-sm mb-3">
    <div class="card-header bg-white d-flex justify-content-between align-items-center flex-wrap gap-2 py-3">
        <div>
            <h6 class="card-title mb-0 fw-bold">Đơn hàng #@Model.Id</h6>
            <small class="text-muted">Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy")</small>
        </div>
        <span class="badge rounded-pill bg-@statusConfig.Item1 fs-6 px-3 py-2">
            <i class="fas @statusConfig.Item2 me-1"></i>
            @statusConfig.Item3
        </span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <p class="mb-1"><strong>Người nhận:</strong> @Model.FullName</p>
                <p class="text-muted mb-0"><strong>Địa chỉ:</strong> @Model.Address, @Model.District, @Model.City</p>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <small class="text-muted d-block">Tổng tiền</small>
                <span class="fw-bold fs-5 text-primary">@Model.OrderTotal.ToString("N0")₫</span>
            </div>
        </div>
    </div>
    <div class="card-footer bg-light-subtle text-end border-top-0">
        <a asp-controller="Order" asp-action="Detail" asp-route-orderId="@Model.Id" class="btn btn-outline-primary btn-sm">
            Xem chi tiết đơn hàng <i class="fas fa-chevron-right ms-1"></i>
        </a>
    </div>
</div>